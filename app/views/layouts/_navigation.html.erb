<script>

  function tweak_session_ui(){
    $('#login-logout-container').empty();
    var fragment;
    if (getCookie("token") == ""){
      fragment = "<li><a href='/users/new'>Sign up</a></li>"
              +  "<li><a href='/login'>Sign in</a></li>";
    } else {
      fragment =  "<li class='dropdown'>"
                +   "<a href='#' class='dropdown-toggle' data-toggle='dropdown' role='button' aria-haspopup='true' aria-expanded='false'>" + getCookie("username") + "<span class='caret'></span></a>"
