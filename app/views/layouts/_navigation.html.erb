    });

    $('#logout_btn').click(function(e){
      if (confirm('Are you sure you want to log out?')){
        e.preventDefault();
        $.ajax({
            type: "DELETE",
            url: "http://localhost:3000/api/v1/auths",
            headers: {"Authorization": "Token token=" + getCookie('token')},
            success: function(){
              deleteAllCookies();
              location.reload();
            }
        });
      };
    });
  })
</script>
