<h1>Edit Book</h1>

<form>
  <div><input id="title_box" type="text" name="title" placeholder="Title"></div>
  <div><input id="author_box" type="text" name="author" placeholder="Author"></div>
  <div>
    <input type="submit" name="g" value="Submit" id="g">
  </div>
</form>


<button id="del_btn" type="button">Delete this book?</button>
<a href="/books/all">Back</a>

<p id="test" hidden></p>

<script>
  $(document).ready(function(){
    $.ajax({
      type: "GET",
      url: "http://localhost:3000/books/" + <%= "#{params[:id]}" %>,
      dataType: "json",
      success: function(data){
        console.log(data);
        $('#title_box').val(data.title);
        $('#author_box').val(data.author);
      },
      error: function(data){
        // $('.form').hidden().empty();
        // $('#del_btn').hidden().empty();
        // $('.a').hidden().empty();
        console.log(data);
      }
    });

    $( "form" ).submit(function( e ) {
      e.preventDefault();
      var jsontype = objectifyForm($( this ).serializeArray());
      var formdata = JSON.stringify(jsontype);

      $.ajax({
          type: "PUT",
          url: "http://localhost:3000/api/v1/books/" + <%= "#{params[:id]}" %>,
          headers: { "Authorization": "Token token=" + getCookie('token') },
          contentType: "application/json; charset=utf-8", // this
          dataType: "json", // and this
          data: formdata ,
          success: function(){
            alertAtElement("test", 'The book has been successfully updated!');
          },
          error: function(data){
            console.log(data);
            alertAtElement("test", data.responseJSON.errors[0].detail);
          }
      });

    });
    $( "#del_btn" ).click(function( ) {
      if (confirm("Are you sure you want to delete this book?")) {
        $.ajax({
          type: "DELETE",
          url: "http://localhost:3000/api/v1/books/" + <%= "#{params[:id]}" %>,
          headers: { "Authorization": "Token token=" + getCookie('token') },
          success: function(){
            alertAtElement("test", 'The book has succesffuly deleted!');
          },
          error: function(data){
            alertAtElement("test", data.responseJSON.errors[0].detail);
          }
        });
      }
    });
  });
</script>
